{
  "name": "openapi-db",
  "version": "0.1.0",
  "description": "Framework-agnostic library that serves REST API endpoints from OpenAPI spec with database queries",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && tsc",
    "prepublishOnly": "pnpm build",
    "test": "vitest run --exclude 'test/integration/**'",
    "test:watch": "vitest --exclude 'test/integration/**'",
    "test:integration": "vitest run test/integration",
    "test:all": "vitest run",
    "release": "semantic-release"
  },
  "keywords": [
    "openapi",
    "rest",
    "api",
    "database",
    "postgresql",
    "mongodb",
    "sql",
    "routing",
    "framework-agnostic"
  ],
  "author": "The Software Bakery",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thesoftwarebakery/openapi-db.git"
  },
  "homepage": "https://github.com/thesoftwarebakery/openapi-db#readme",
  "bugs": {
    "url": "https://github.com/thesoftwarebakery/openapi-db/issues"
  },
  "packageManager": "pnpm@10.18.3",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.3",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@testcontainers/mongodb": "^11.11.0",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "express": "^5.2.1",
    "mongodb": "^6.15.0",
    "pg": "^8.17.1",
    "semantic-release": "^25.0.3",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "mongodb": "^6.0.0",
    "pg": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    }
  },
  "dependencies": {
    "jsonpointer": "^5.0.1",
    "yaml": "^2.8.2"
  }
}
